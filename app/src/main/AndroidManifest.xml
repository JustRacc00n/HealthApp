<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.szopinz">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainMenuActivity"
                  android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateFoodActivity"
            android:label="@string/item_add_food"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".ShowDataActivity"
            android:label="@string/item_data"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".SingleItemActivity"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".SearchActivity"
            android:label="@string/item_by_search"
            android:parentActivityName=".MainMenuActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ClearAllActivity"
            android:label="@string/clear_all_button"
            android:parentActivityName=".MainMenuActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity
            android:name=".AddSymptomActivity"
            android:label="@string/item_add_symptom"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".AddMedicationActivity"
            android:label="@string/item_add_medication"
            android:parentActivityName=".MainMenuActivity" />
        <activity
            android:name=".FrequentResultsActivity"
            android:label="@string/see_most_frequent"
            android:parentActivityName=".MainMenuActivity" />

    </application>

</manifest>